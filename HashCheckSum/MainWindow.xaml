<Window x:Class="HashCheckSum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashCheckSum"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="HashText" HorizontalAlignment="Left" Height="29" Margin="62,118,0,0" TextWrapping="Wrap" Text="Place Hash here" VerticalAlignment="Top" Width="348"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Height="22" Margin="330,59,0,0" VerticalAlignment="Top" Width="107">
            <ComboBox.ItemTemplate>
                <DataTemplate
                DataType= "{Binding}">
                    <CheckBox
                        Content="SHA256" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

    </Grid>
</Window>
