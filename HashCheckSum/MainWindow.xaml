<Window x:Class="HashCheckSum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashCheckSum"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="HashText" HorizontalAlignment="Left" Height="29" Margin="63,86,0,0" TextWrapping="Wrap" Text="Author's Hash" VerticalAlignment="Top" Width="348"/>
        <TextBox x:Name="FileLocationText" HorizontalAlignment="Left" Height="22" Margin="63,59,0,0" TextWrapping="Wrap" Text="File" VerticalAlignment="Top" Width="169"/>
        <Button x:Name="Browsebtn" Content="Browse" HorizontalAlignment="Left" Height="22" Margin="232,59,0,0" VerticalAlignment="Top" Width="68" Click="Browsebtn_Click"/>
        <Label x:Name="HashLbl" Content="File's Hash: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="63,159,0,0" Width="348"/>
        <Label x:Name="VerifyLbl" Content="Press Calculate to find if Hash is same" HorizontalAlignment="Left" Height="24" Margin="63,190,0,0" VerticalAlignment="Top" Width="211"/>
        <Button x:Name="Calcbtn" Content="Calculate" HorizontalAlignment="Left" Height="25" Margin="167,237,0,0" VerticalAlignment="Top" Width="94" Click="Calcbtn_Click"/>

    </Grid>
</Window>
